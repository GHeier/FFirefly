\begin_layout Section*
Wave direction check
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{Q}_{k}=\left(\begin{array}{ccc}
a+b(g_{x}^{2}-1) & bg_{x}g_{y} & bg_{x}g_{z}\\
bg_{x}g_{y} & a+b(g_{y}^{2}-1) & bg_{y}g_{z}\\
bg_{x}g_{z} & bg_{y}g_{z} & a+b(g_{z}^{2}-1)
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $a,b$
\end_inset

 are also functions of 
\begin_inset Formula $k$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{P}=\left(\begin{array}{cc}
\hat{Q_{0}}V_{00} & \hat{Q_{1}}V_{01}\\
\hat{Q_{0}}V_{10} & \hat{Q_{1}}V_{11}
\end{array}\right),\left(\begin{array}{c}
\vec{d}_{0}\\
\vec{d}_{1}
\end{array}\right)=\hat{P}\left(\begin{array}{c}
\vec{d}_{0}\\
\vec{d}_{1}
\end{array}\right)=\left(\begin{array}{cc}
\hat{Q_{0}}V_{00} & \hat{Q_{1}}V_{01}\\
\hat{Q_{0}}V_{10} & \hat{Q_{1}}V_{11}
\end{array}\right)\left(\begin{array}{c}
\vec{d}_{0}\\
\vec{d}_{1}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\begin{array}{c}
\vec{d}_{0}\\
\vec{d}_{1}
\end{array}\right)=\left(\begin{array}{c}
V_{00}\hat{Q}_{0}\vec{d}_{0}+V_{01}\hat{Q}_{1}\vec{d}_{1}\\
V_{10}\hat{Q}_{0}\vec{d}_{0}+V_{11}\hat{Q}_{1}\vec{d}_{1}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Let's take a 2D case for ease of math, so 
\begin_inset Formula $\hat{Q}$
\end_inset

 is 2x2
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{Q_{k}}=\left(\begin{array}{cc}
a+b(g_{x}^{2}-1) & bg_{x}g_{y}\\
bg_{x}g_{y} & a+b(g_{y}^{2}-1)
\end{array}\right),\hat{g}_{k}=\left(\begin{array}{c}
\cos\theta_{k}\\
\sin\theta_{k}
\end{array}\right),\hat{Q}_{k}=\left(\begin{array}{cc}
a_{k}-b_{k}\sin^{2}\theta_{k} & b_{k}\sin\theta_{k}\cos\theta_{k}\\
b_{k}\sin\theta_{k}\cos\theta_{k} & a_{k}-b_{k}\cos^{2}\theta_{k}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
For 
\begin_inset Formula $d_{k}||g_{k}$
\end_inset

, 
\begin_inset Formula $d_{k}=\left(\begin{array}{c}
\cos\theta_{k}\\
\sin\theta_{k}
\end{array}\right)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{Q}_{k}d_{k}=\left(\begin{array}{cc}
a_{k}-b_{k}\sin^{2}\theta_{k} & b_{k}\sin\theta_{k}\cos\theta_{k}\\
b_{k}\sin\theta_{k}\cos\theta_{k} & a_{k}-b_{k}\cos^{2}\theta_{k}
\end{array}\right)\left(\begin{array}{c}
\cos\theta_{k}\\
\sin\theta_{k}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{Q}_{k}d_{k}=\left(\begin{array}{c}
(a_{k}-b_{k}\sin^{2}\theta_{k})\cos\theta_{k}+b_{k}\cos\theta_{k}\sin^{2}\theta_{k}\\
(a_{k}-b_{k}\cos^{2}\theta_{k})\sin\theta_{k}+(b_{k}\sin\theta_{k}\cos\theta_{k})\cos\theta_{k}
\end{array}\right)=\left(\begin{array}{c}
a_{k}\cos\theta_{k}\\
a_{k}\sin\theta_{k}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\begin{array}{c}
\cos\theta_{0}\\
\sin\theta_{0}\\
\cos\theta_{1}\\
\cos\theta_{1}
\end{array}\right)=\left(\begin{array}{c}
V_{00}a_{0}\cos\theta_{0}+V_{01}a_{1}\cos\theta_{1}\\
V_{00}a_{0}\sin\theta_{0}+V_{01}a_{1}\sin\theta_{1}\\
V_{10}a_{0}\cos\theta_{0}+V_{11}a_{1}\cos\theta_{1}\\
V_{10}a_{0}\sin\theta_{0}+V_{11}a_{1}\sin\theta_{1}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\begin{array}{c}
V_{00}(a_{0}-1)\cos\theta_{0}+V_{01}a_{1}\cos\theta_{1}\\
V_{00}(a_{0}-1)\sin\theta_{0}+V_{01}a_{1}\sin\theta_{1}\\
V_{10}a_{0}\cos\theta_{0}+V_{11}(a_{1}-1)\cos\theta_{1}\\
V_{10}a_{0}\sin\theta_{0}+V_{11}(a_{1}-1)\sin\theta_{1}
\end{array}\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{V_{01}}{V_{00}}=\frac{(a_{0}-1)\cos\theta_{0}}{a_{1}\cos\theta_{1}}=\frac{(a_{0}-1)\sin\theta_{0}}{a_{1}\sin\theta_{1}},\frac{V_{10}}{V_{11}}=\frac{(a_{1}-1)\cos\theta_{1}}{a_{0}\cos\theta_{0}}=\frac{(a_{1}-1)\sin\theta_{1}}{a_{0}\sin\theta_{0}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $V$
\end_inset

 is hermitian, so 
\begin_inset Formula $V_{01}=V_{10}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V_{01}=V_{10}=\frac{(a_{0}-1)\cos\theta_{0}}{a_{1}\cos\theta_{1}}V_{00}=\frac{(a_{1}-1)\cos\theta_{1}}{a_{0}\cos\theta_{0}}V_{11}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{V_{11}}{V_{00}}=\frac{\frac{(a_{0}-1)\cos\theta_{0}}{a_{1}\cos\theta_{1}}}{\frac{(a_{1}-1)\cos\theta_{1}}{a_{0}\cos\theta_{0}}}=\frac{(a_{0}-1)\cos\theta_{0}}{(a_{1}-1)\cos\theta_{1}}\cdot\frac{a_{0}\cos\theta_{0}}{a_{1}\cos\theta_{1}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a_{k}=\frac{1}{2}\left(\frac{\tanh(\epsilon_{+}/2T_{c})}{2\epsilon_{+}}+\frac{\tanh(\epsilon_{-}/2T_{c})}{2\epsilon_{-}}\right)=\frac{1}{2}\left(\frac{\tanh((k^{2}+\alpha)/2T_{c})}{2(k^{2}+\alpha)}+\frac{\tanh((k^{2}-\alpha)/2T_{c})}{2(k^{2}-\alpha)}\right)
\]

\end_inset


\end_layout

