\begin_layout Standard
\begin_inset Formula 
\[
\hat{Q}_{k'}\cdot\hat{Q}_{k}=\left(\begin{array}{ccc}
a+b(g_{x}^{2}-1)(a'+b'(g_{x'}^{2}-1)) & bg_{x}g_{y} & bg_{x}g_{z}\\
bg_{x}g_{y} & a+b(g_{y}^{2}-1) & bg_{y}g_{z}\\
bg_{x}g_{z} & bg_{y}g_{z} & a+b(g_{z}^{2}-1)
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d(k)=-k_{B}T\sum_{k'}V_{kk'}\{(G_{+}G_{+}+G_{-}G_{-})d(k')+2G_{-}G_{-}[\hat{\hat{g}_{k'}(\hat{g}_{k'}\cdot d(k')-d(k')]\}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d(k)=\sum_{k'}V_{kk'}(a(d(k')+b(\hat{g}_{k'}(\hat{g}_{k'}\cdot d(k')-d(k')))
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d_{x}(k)=\sum_{k'}V_{kk'}\{ad_{x}(k')+b(g_{x}^{2}-1)d_{x}(k')+bg_{x}g_{y}d_{y}(k')+bg_{y}g_{z}d_{z}(k')\}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d_{x}(k)=\sum_{k'}V_{kk'}(q_{11}(k')d_{x}(k')+q_{12}d_{y}(k')+q_{13}d_{z}(k'))
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Q(k)d(k)=\sum_{k'}V_{kk'}Q(k)Q(k')d(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\sum_{k'}(V_{kk'}Q(k)Q(k')-\lambda Q(k)\delta_{kk'})d(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d(k)=V_{kk'}\otimes Q(k')d(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $V_{kk'}$
\end_inset

 is Hermitian, but 
\begin_inset Formula $V_{kk'}\otimes Q_{k'}$
\end_inset

 is not.
 We can multiply each side by 
\begin_inset Formula $Q_{k}$
\end_inset

 to make the matrix Hermitian.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Q(k)d(k)=V_{kk'}\otimes Q(k')Q(k)d(k')
\]

\end_inset


\end_layout

\begin_layout Standard
but that won't change the final answer, since we have to then apply 
\begin_inset Formula $Q^{-1}(k)$
\end_inset

 to each side to solve for 
\begin_inset Formula $d(k)$
\end_inset

, which will be unchanged.
 Just as in the spin singlet case, where the equation reads 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\psi(k)\tanh(\beta\epsilon_{k}/2)/(2\epsilon_{k})=\sum_{k'}V_{kk'}\tanh(\beta\epsilon_{k}/2)/(2\epsilon_{k})\tanh(\beta\epsilon_{k'}/2)/(2\epsilon_{k'})\psi(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lambda\psi(k)=\sum_{k'}V_{kk'}\tanh(\beta\epsilon_{k'}/2)/(2\epsilon_{k'})\psi(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\sum_{k'}V_{kk'}\tanh(\beta\epsilon_{k}/2)/(2\epsilon_{k})\tanh(\beta\epsilon_{k'}/2)/(2\epsilon_{k'})\psi(k')-\lambda\psi(k)\tanh(\beta\epsilon_{k}/2)/(2\epsilon_{k})
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\sum_{k'}\varint d\epsilon d\epsilon'\delta(\epsilon-\epsilon_{k})\delta(\epsilon'-\epsilon_{k'})(V_{kk'}\tanh(\beta\epsilon_{k}/2)/(2\epsilon_{k})\tanh(\beta\epsilon_{k'}/2)/(2\epsilon_{k'})-\lambda'\delta_{kk'})\psi(k')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\sum_{\theta'}\varint d\epsilon d\epsilon'\delta(\epsilon-\epsilon_{k})\delta(\epsilon'-\epsilon_{k'})(V_{\theta\theta'}\tanh(\beta\epsilon/2)/(2\epsilon)\tanh(\beta\epsilon'/2)/(2\epsilon')-\lambda'\tanh(\beta\epsilon/2)/(2\epsilon)\delta_{\theta\theta'})\psi(\theta')
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lambda'=\lambda\varint_{-\omega_{D}}^{\omega_{D}}d\epsilon\tanh(\beta\epsilon/2)/(2\epsilon)
\]

\end_inset


\end_layout

\begin_layout Standard
with a constant potential, only an s-wave will result.
